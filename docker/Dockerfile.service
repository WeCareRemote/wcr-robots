# ./docker/Dockerfile.service
FROM python:3.13-slim

WORKDIR /app

ENV UV_PROJECT_ENVIRONMENT="/usr/local/"
ENV UV_COMPILE_BYTECODE=1

# build deps for psycopg2 + curl + CA certs
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    ca-certificates \
 && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml .
COPY uv.lock .
RUN pip install --no-cache-dir uv
RUN uv sync --frozen --no-install-project --no-dev

COPY src/agents/ ./agents/
COPY src/core/ ./core/
COPY src/memory/ ./memory/
COPY src/schema/ ./schema/
COPY src/service/ ./service/
COPY src/run_service.py .


ARG OPENAI_API_KEY
ARG AZURE_OPENAI_API_KEY
ARG DEEPSEEK_API_KEY
ARG ANTHROPIC_API_KEY
ARG GOOGLE_API_KEY
ARG GROQ_API_KEY
ARG OPENROUTER_API_KEY
ARG USE_AWS_BEDROCK
ARG GOOGLE_APPLICATION_CREDENTIALS
ARG AWS_KB_ID
ARG USE_FAKE_MODEL
ARG DEFAULT_MODEL
ARG COMPATIBLE_MODEL
ARG COMPATIBLE_API_KEY
ARG COMPATIBLE_BASE_URL
ARG AUTH_SECRET
ARG DATABASE_TYPE
ARG HOST
ARG PORT
ARG POSTGRES_HOST
ARG POSTGRES_PORT
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_DB
ARG OPENWEATHERMAP_API_KEY
ARG LANGFUSE_TRACING
ARG LANGFUSE_SECRET_KEY
ARG LANGFUSE_PUBLIC_KEY
ARG LANGFUSE_HOST

ENV OPENAI_API_KEY=$OPENAI_API_KEY 
ENV AZURE_OPENAI_API_KEY=$AZURE_OPENAI_API_KEY
ENV DEEPSEEK_API_KEY=$DEEPSEEK_API_KEY  
ENV ANTHROPIC_API_KEY=$ANTHROPIC_API_KEY
ENV GOOGLE_API_KEY=$GOOGLE_API_KEY
ENV GROQ_API_KEY=$GROQ_API_KEY 
ENV OPENROUTER_API_KEY=$OPENROUTER_API_KEY
ENV USE_AWS_BEDROCK=$USE_AWS_BEDROCK
ENV GOOGLE_APPLICATION_CREDENTIALS=$GOOGLE_APPLICATION_CREDENTIALS
ENV AWS_KB_ID=$AWS_KB_ID
ENV USE_FAKE_MODEL=$USE_FAKE_MODEL
ENV DEFAULT_MODEL=$DEFAULT_MODEL
ENV COMPATIBLE_MODEL=$COMPATIBLE_MODEL
ENV COMPATIBLE_API_KEY=$COMPATIBLE_API_KEY
ENV COMPATIBLE_BASE_URL=$COMPATIBLE_BASE_URL
ENV AUTH_SECRET=$AUTH_SECRET
ENV DATABASE_TYPE=$DATABASE_TYPE
ENV HOST=$HOST
ENV PORT=$PORT
ENV POSTGRES_HOST=$POSTGRES_HOST
ENV POSTGRES_PORT=$POSTGRES_PORT
ENV POSTGRES_USER=$POSTGRES_USER
ENV POSTGRES_PASSWORD=$POSTGRES_PASSWORD
ENV POSTGRES_DB=$POSTGRES_DB
ENV OPENWEATHERMAP_API_KEY=$OPENWEATHERMAP_API_KEY
ENV LANGFUSE_TRACING=$LANGFUSE_TRACING
ENV LANGFUSE_SECRET_KEY=$LANGFUSE_SECRET_KEY
ENV LANGFUSE_PUBLIC_KEY=$LANGFUSE_PUBLIC_KEY
ENV LANGFUSE_HOST=$LANGFUSE_HOST


CMD ["python", "run_service.py"]